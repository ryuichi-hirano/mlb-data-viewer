# =============================================================================
# MLB Data Viewer - Docker Environment Variables
# =============================================================================
# Copy this file to .env and adjust values as needed:
#   cp .env.example .env
# =============================================================================

# PostgreSQL
POSTGRES_DB=mlb_data
POSTGRES_USER=mlb_user
POSTGRES_PASSWORD=mlb_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# dbt (maps to dbt profile env_var references)
DBT_USER=mlb_user
DBT_PASSWORD=mlb_password
DBT_HOST=db
DBT_PORT=5432
DBT_DBNAME=mlb_data

# Evidence.dev dashboard
EVIDENCE_PORT=3000

# Extraction settings
EXTRACTION_SEASON=2024
EXTRACTION_LOG_LEVEL=INFO
